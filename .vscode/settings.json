{
  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "ruff.path": ["./thingbooker-backend/.venv/bin/ruff"],
  "cSpell.words": ["thingbooker"],
  "mypy-type-checker.args": [
    "--config-file=thingbooker-backend/pyproject.toml"
  ],
  "djlint.configuration": "thingbooker-backend/pyproject.toml",
  "djlint.formatLanguages": [
    "django-html",
    "jinja",
    "jinja-html",
    "nj",
    "njk",
    "nunjucks",
    "twig",
    "handlebars",
    "hbs",
    "mustache"
  ],
  "svelte.enable-ts-plugin": true
}
